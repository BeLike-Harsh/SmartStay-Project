                    <input value="2" name="reviews[rating]" id="star2" type="radio" required>
                    <label title="text" for="star2"></label>
                    <input value="1" name="reviews[rating]" id="star1" type="radio" required>
                    <label title="text" for="star1"></label>
                  </div>
                  <button class="btn btn-outline-primary">Submit</button>
            </form>
         </div>

