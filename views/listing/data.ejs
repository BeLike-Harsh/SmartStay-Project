<% layout("./layout/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <h2><%= data.title %></h2>
         </div>   
            <div class="card col-6 offset-3 show-card">
                <img src=<%= data.image  %> class="card-img-top show-img" alt="Pg image">
               <div class="card-body">
                 <p class="card-text"><%= data.description %> <br>
                  <p class="card-text">&#8377;<%= data.price.toLocaleString("en-IN") %> </p>
                  <p class="card-text"><%= data.location %> </p>
                  <p class="card-text"><%= data.country %>  </p>
                    <p class="card-text"><i><b>-@<%= data.owner.username %></b></i></p>

                </p>
                <% if(currUser &&currUser._id.equals(data.owner._id)) {%>
                <div class="btns">
                    <a href="/lists/<%= data._id %>/edit" class="btn btn-success">Edit</a>
                  <form method="POST" action="/lists/<%= data.id %>?_method=DELETE">
                    <button class="btn btn-danger offset-2">Delete</button>
                  </form>
                </div>
                <% } %>
              </div>
            </div><hr>
         <div class="col-8 offset-2">
            <h3>Leave a review</h3>
            <form method="POST" action="/lists/<%= data.id %>/reviews" novalidate class="needs-validation">
