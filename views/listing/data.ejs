                    <label for="comment" class="form-label">Add a comment</label>
                    <textarea type="text" name="reviews[comment]" id="comment" rows="2" cols="30" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please add a comment.
                      </div>
                </div>
                <div class="rating">
                    <input value="5" name="reviews[rating]" id="star5" type="radio" required>
                    <label title="text" for="star5"></label>
                    <input value="4" name="reviews[rating]" id="star4" type="radio" required>
                    <label title="text" for="star4"></label>
                    <input value="3" name="reviews[rating]" id="star3" type="radio" required>
