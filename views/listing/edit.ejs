<% layout("./layout/boilerplate") %>
<body>
    <div class="row" >
        <div class="col-7 offset-2">
    <h2>Edit Your PG details</h2>
    <form method="POST" action="/lists/<%= data._id %>?_method=PATCH" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title: </label>
            <input type="text" name="listing[title]" class="form-control" value="<%= data.title %>" required>
            <div class="invalid-feedback">
                Please choose a Title.
              </div>  
        </div>
            <div class="mb-3">
                <label for="description" class="form-label">Enter Description: </label>
                <textarea name="listing[description]" class="form-control" required ><%= data.description %></textarea>
                <div class="invalid-feedback">
                    Please add a description.
                  </div>
            </div>
            <div class="mb-3">
                <p>Original Image</p>
                <img src="<%= originalImageUrl %>" alt="old image">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image </label>
                <input type="file" name="listing[image]" class="form-control" value="<%= data.image %>">
                <div class="invalid-feedback">
                    Please Upload a image.
                  </div>
            </div>
            <div class="row">
             <div class="mb-3 col-md-3">
                <label for="price" class="form-label">Enter Price: </label>
                <input type="text" name="listing[price]" class="form-control" value="<%= data.price %>" required>
                <div class="invalid-feedback">
                    Please provide a price.
                  </div>
             </div>
             <div class="mb-3 col-md-9">
                <label for="country" class="form-label">Enter Country: </label>
                <input type="text" name="listing[country]" class="form-control" value="<%= data.country %>" required>
                <div class="invalid-feedback">
                    Please choose a country.
                  </div>
             </div>
            </div>
             <div class="mb-3">
                <label for="location" class="form-label">Enter Location: </label>
                <input type="text"  name="listing[location]" class="form-control" value="<%= data.location %>" required>
                <div class="invalid-feedback">
                    Please enter a location.
                  </div>
                
             </div><br>
            <button class="btn btn-danger btn-dark">Edit</button>
    </form>
    </div>
 </div>
 <br>
</body>
